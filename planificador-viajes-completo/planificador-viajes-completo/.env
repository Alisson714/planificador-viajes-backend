# ===========================================
# CONFIGURACIÓN DE BASE DE DATOS
# ===========================================

# Host de la base de datos PostgreSQL
DB_HOST=localhost

# Puerto de PostgreSQL (por defecto 5432)
DB_PORT=5432

# Usuario de la base de datos
DB_USERNAME=postgres

# Contraseña del usuario de la base de datos
DB_PASSWORD=12345

# Nombre de la base de datos
DB_DATABASE=planificador_viajes

# ===========================================
# CONFIGURACIÓN JWT
# ===========================================

# Clave secreta para JWT (¡CAMBIA EN PRODUCCIÓN!)
JWT_SECRET=tu-super-secret-jwt-key-cambia-en-produccion

# ===========================================
# CONFIGURACIÓN DE LA APLICACIÓN
# ===========================================

# Puerto donde correrá la aplicación
PORT=3000

# Entorno de ejecución
NODE_ENV=development

# ===========================================
# CONFIGURACIÓN ADICIONAL (OPCIONAL)
# ===========================================

# Logs de TypeORM (true/false)
TYPEORM_LOGGING=true

# Sincronización automática de esquemas (solo desarrollo)
TYPEORM_SYNCHRONIZE=true

# ===========================================
# INSTRUCCIONES DE USO
# ===========================================

# 1. Copia este archivo y renómbralo a .env
# 2. Modifica los valores según tu configuración
# 3. Asegúrate de que PostgreSQL esté instalado y corriendo
# 4. Crea la base de datos: CREATE DATABASE planificador_viajes;
# 5. Ejecuta: npm run start:dev 